<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background=""
    tools:context=".loginuser.view.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="160dp"
            android:layout_marginLeft="170dp"
            android:src="@mipmap/register_icon_phone_n_xhdpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:background="@null"
            android:id="@+id/login_edit_phone"
            android:layout_marginTop="159dp"
            android:layout_marginLeft="210dp"
            android:textColor="#fff"
            android:textSize="18dp"
            android:hint="手机号"
            android:textColorHint="#fff"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/login_phone"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="210dp"
            android:background="#fff"
            android:layout_width="280dp"
            android:layout_height="2dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="300dp"
            android:layout_marginLeft="170dp"
            android:src=""
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <EditText
            android:password="true"
            android:id="@+id/login_edit_pwd"
            android:layout_marginTop="299dp"
            android:layout_marginLeft="210dp"
            android:textColor="#fff"
            android:background="@null"
            android:textColorHint="#fff"
            android:hint="登录密码"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <View

            android:id="@+id/login_pwd"
            android:layout_width="280dp"
            android:layout_height="2dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="350dp"
            android:background="#fff" />

        <ImageView
            android:layout_marginTop="300dp"
            android:layout_marginLeft="425dp"
            android:src="@mipmap/register_icon_lock_n_xhdpi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <CheckBox
        android:id="@+id/login_checkbox"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="400dp"
        android:text="记住密码"
        android:textColor="#DD3F3F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/login_register"
        android:layout_marginLeft="400dp"
        android:layout_marginTop="410dp"
        android:textColor="#fff"
        android:text="快速注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/login_login"
        android:textColor="#D85353"
        android:text="登录"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="660dp"
        android:layout_width="280dp"
        android:layout_height="40dp"/>
</RelativeLayout>